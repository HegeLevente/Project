<!DOCTYPE html>
<html>
  <head>
    <title></title>
    <link rel="stylesheet" href="/css/bootstrap-grid.min.css" />
    <link rel="stylesheet" href="/css/bootstrap-reboot.min.css" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <script src="/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="/css/valtoztat.css">
    <link rel="stylesheet" href="/css/main.css"/>
    <link rel="stylesheet" href="/css/navbar.css" />
    <title>Retro Film Kincsek</title>
  </head>
  <body>
    <%- include('navbar.ejs') %>
    <div class="valtoztat-container">
      <form action="/user/profil/valtoztat" method="post" class="input" onsubmit="passCheck()">
        <h1>Adatok Változtatása</h1>
        <input type="text" placeholder="Full Name" name="fullname">
        <input type="text" placeholder="Username" name="username">
        <input type="email" placeholder="Email" name="email">
        <input type="password" placeholder="Password" name="password">
        <input type="password" placeholder="Confirm Password" name="passwordConfirm">
        <input type="submit" value="Submit">
      </form>
    </div>
    <script>
      function passCheck() {
  var pass = document.getElementsByName("password");
  if (pass.length > 0) {
    var confpass = document.getElementsByName("passwordConfirm");
    if (pass[0].value.length > 8) {
      if (pass[0].value == confpass[0].value) {
        return true;
      } else {
        alert("A jelszók nem egyeznek meg");
        return false;
      }
    } else {
      alert("A jelszónak minimum 8 karakter hosszúnak kell lennie");
      return false;
    }
  } else {
    return true;
  }
}
    </script>
</html>
